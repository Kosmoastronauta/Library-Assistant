<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.AddMemberController"
            prefHeight="400.0" prefWidth="600.0" >



    <top>
        <Label styleClass="title" text="Add Member" alignment="CENTER" BorderPane.alignment="CENTER" />
    </top>

    <center>




    <GridPane styleClass="box" maxWidth="400" maxHeight="400">
        <padding>
            <Insets left="10" right="10" top="10" />
        </padding>


        <GridPane styleClass="box" BorderPane.alignment="CENTER"   >

            <HBox spacing="20">
                <VBox spacing="15">
                    <Label styleClass = "memberData" text = "Name*:"        />
                    <Label styleClass = "memberData" text = "Last Name*:"   />
                    <Label styleClass = "memberData" text = "E-mail*:"      />
                    <Label styleClass = "memberData" text = "Phone:"        />

                    <Button fx:id="buttonAddSave" text="Add" minWidth="100" minHeight="50" onAction="#onButtonAddSaveClicked">

                    </Button>
                </VBox>
                <VBox spacing="15">
                    <TextField fx:id = "addNameField"     />
                    <TextField fx:id = "addLastNameField" />
                    <TextField fx:id = "addEmailField"    />
                    <TextField fx:id = "addPhoneField"    />
                </VBox>
            </HBox>


        </GridPane>



    </GridPane>


    </center>

    <bottom >

        <Label styleClass="foot" text="   *-necessary field" />
    </bottom>

</BorderPane>
